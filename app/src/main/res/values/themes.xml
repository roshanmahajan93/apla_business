<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApnaBusiness" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorGray</item>
        <item name="colorPrimaryVariant">@color/colorBlackFaded</item>
        <item name="colorOnPrimary">@color/colorGray</item>
        <item name="colorAccent">@color/colorBlackFaded</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorYellow</item>
        <item name="colorSecondaryVariant">@color/colorYellow</item>
        <item name="colorOnSecondary">@color/colorBlackFaded</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">?colorAccent</item>
        <item name="android:textColorSecondary">@color/colorYellow</item>
        <item name="divider">@color/colorGray</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ToolbarStyle.AttributeText">
        <item name="android:textColor">@color/colorBlackFaded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarStyle.AttributeIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="LinearLayoutFormStyle">
        <item name="android:background">@drawable/top_bottom_border</item>
    </style>
    <style name="LinearLayoutFormStyle.Two">
        <item name="android:background">@drawable/top_bottom_border_two</item>
    </style>
    <style name="TextViewStyle">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/colorBlackFaded</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextViewStyleContent">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/colorBlackFaded</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MaterialButtonStyle">
        <item name="android:textColor">@color/colorBlackFaded</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">?colorSecondary</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:background">@drawable/border_text_input_layout</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:background">@drawable/border_text_input_layout</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

</resources>